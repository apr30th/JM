<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/microwave_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/microwave_icon" />

            <TextView
                android:id="@+id/microwave"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="  전자레인지 조리법"
                android:textColor="#00BCD4"
                android:textSize="17dp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#E6E6E6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/micro_recipe1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EEEEFA"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="시간 : 10min (1000W 기준)"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/micro_recipe2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="#EEEEFA"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="시간 : 7min (700W 기준)"
                android:textColor="#000000"
                android:textSize="15dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/airfrier_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/airfrier_icon" />

            <TextView
                android:id="@+id/airfrier"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="  에어프라이어 조리법"
                android:textColor="#FB8560"
                android:textSize="17dp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#E6E6E6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/air_recipe1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EEEEFA"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="시간 : 10min"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/air_recipe2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="#EEEEFA"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="온도 : 180도"
                android:textColor="#000000"
                android:textSize="15dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>